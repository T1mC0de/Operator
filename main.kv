# Сделали чтобы для любого виджета можно было
# настротить задний фон

<BackgroundColor@Widget>
    background_color: 1, 0, 0, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

